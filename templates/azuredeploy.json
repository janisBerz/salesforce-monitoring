                                                "SubscriptionId": "[subscription().id]",
                                                "ResourceGroup": "[resourceGroup().name]",
                                                "Name": "[variables('logAnalyticsConnectionName')]",
                                                "ResourceId": "[resourceId('Microsoft.Web/connections', variables('logAnalyticsConnectionName'))]"
                                            },
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Dimensions",
                                            "value": {
                                                "xAxis": {
