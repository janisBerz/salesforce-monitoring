                                            },
                                            "isOptional": true
                                        },
                                        {
                                            "name": "Query",
                                            "value": "SalesforceLicense_CL\r\n| where CompanyName_s == \"visma-sandbox-jb\"\r\n| where Name_s == \"Salesforce\"\r\n| project TimeGenerated, toint(UsedLicenses_s), toint(TotalLicenses_s)\r\n| render timechart with ( ytitle=\"Licences\", title=\"visma-sandbox-jb\")",
                                            "isOptional": true
                                        },
